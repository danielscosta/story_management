<h1> Stories </h1>
<% if current_user.role == "editor" %>
    <%= link_to "New Story", stories_new_path %>
<% end %>
<table>
    <thead>
      <tr>
        <th>Id</th>
        <th>Headline</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% @stories.each do |story| %>
        <tr>
          <td><%= story.id %></td>
          <td><%= story.headline %></td>
          <td><%= story.status %></td>
        </tr>
     <% end %>
   </tbody>
</table>